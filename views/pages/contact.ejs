<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head') %>
  </head>
  <body>
    <%- include('../partials/_nav') %>
    <br />
    <div class="container">
      <div class="card p-3">
        <form action="/send-email" id="contact-form" method="POST" role="form">
          <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input
              type="text"
              class="form-control"
              id="contactFormName"
              placeholder="Name"
              name="name"
              required
            />
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
            <input
              type="email"
              class="form-control"
              id="contactFormEmail"
              placeholder="name@example.com"
              name="email"
              required
            />
          </div>

          <div class="form-group">
            <label for="exampleFormControlTextarea1">Message</label>
            <textarea
              class="form-control"
              id="contactFormMessage"
              rows="3"
              name="message"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send</button>
        </form>
      </div>
    </div>

    <%- include('../partials/_footer') %>
  </body>
  <%- include('../partials/_scripts') %>
</html>
